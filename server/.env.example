# Server Configuration
PORT=3000
API_PREFIX=/api/v1
API_KEY=your-secure-api-key
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
LOG_LEVEL=info
MAX_EVENTS_PER_TOPIC=10

# Kafka Configuration
KAFKA_BROKER=kafka-service.namespace.svc.cluster.local:9092
KAFKA_TOPICS=topic1,topic2,topic3
KAFKA_GROUP_ID=kafka-replicator-group
KAFKA_CLIENT_ID=kafka-replicator-server

# Kafka Retry Configuration
KAFKA_RETRY_INITIAL=100
KAFKA_RETRY_MAX=1000
KAFKA_RETRY_FACTOR=2
KAFKA_RETRY_MULTIPLIER=1.5
KAFKA_RETRY_RETRIES=10 